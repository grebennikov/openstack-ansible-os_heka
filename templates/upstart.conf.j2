description "Data collection and processing made easy. http://hekad.readthedocs.org/"
start on runlevel [2345]
stop on runlevel [!2345]

console log
limit nofile 65536 65536
respawn

pre-start script
    touch /var/log/lma_collector.log
    chown heka:heka /var/log/lma_collector.log
end script

script
   ulimit -n 102400
   exec /usr/bin/hekad -config {{ heka_etc_dir }} &>>/var/log/lma_collector.log
end script
